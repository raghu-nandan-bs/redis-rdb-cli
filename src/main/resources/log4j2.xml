<configuration status="WARN">
    <Properties>
        <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %p %c{1.}:%L - %m%n</Property>
    </Properties>
    <Appenders>
        <RollingFile name="ROLLING" fileName="${sys:cli.log.path:-/var/log/redis-rdb-cli}/redis-rdb-cli.log"
                     filePattern="${sys:cli.log.path:-/var/log/redis-rdb-cli}/$${date:yyyy-MM}/redis-rdb-cli-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <RegexFilter regex=".*socket error.*" onMatch="DENY" onMismatch="ACCEPT"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="1024 MB"/>
            </Policies>
        </RollingFile>
    
        <RollingFile name="METRIC" fileName="${sys:cli.log.path:-/var/log/redis-rdb-cli}/redis-rdb-metric.log"
                     filePattern="${sys:cli.log.path:-/var/log/redis-rdb-cli}/$${date:yyyy-MM}/redis-rdb-metric-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="1024 MB"/>
            </Policies>
        </RollingFile>
    
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
            <RegexFilter regex=".*socket error.*" onMatch="DENY" onMismatch="ACCEPT"/>
        </Console>
    </Appenders>
    
    <Loggers>
        <Logger name="METRIC_LOGGER" level="info" additivity="false">
            <AppenderRef ref="METRIC"/>
        </Logger>
        <Logger name="com.moilioncircle" level="info" additivity="false">
            <AppenderRef ref="ROLLING"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="ROLLING"/>
        </Root>
    </Loggers>
</configuration>
